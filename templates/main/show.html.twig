{% extends 'base.html.twig' %}

{% block title %}Profil de {{user.lastName}} {{user.firstName}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h3>ID</h3>
    id numéro {{user.id}}
    <br>
    <h3>Identité</h3>
    {{user.lastName}}
    {{user.firstName}}
    <br>
    <h3>Date de naissance</h3>
    {{user.dateOfBirth|date("d/m/Y")}}
    <br>
    <h3>Métier</h3>
    {{user.job}}
    <br>
    <h3>Intro</h3>
    {{user.intro}}
    <br>
    <h3>Description</h3>
    {{user.description}}
    
    
</div>
{% endblock %}